


.wrapTop{
  width: 100%;
  height: 300rpx;
  background-color: yellow;
 border-radius: 0 0 300rpx 300rpx;
 overflow: hidden;
}

.wrapTop image{
  width: 100%;
  height: 100%;
}
.shopName{
  height: 70rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  text-align: center;

}
.shopName text{
  font-size: 40rpx;
  line-height: 70rpx;
  
}

.wrapBottom{
  width: 100%;
  height: 100rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;

}
.wrapBottomLeft{
   width: 600rpx;
   height: 100rpx;
   margin-left: 20rpx;
   display: flex;
   flex-direction: column;
}
.openTime{
    width: 400rpx;
   height: 50rpx;
   display: flex;
   flex-direction: row;
}
.openTimeImg{
  width: 40rpx;
  height: 40rpx;
  margin-top: 5rpx;
}
.openTimeImg image{
  width: 100%;
  height: 100%;
}
