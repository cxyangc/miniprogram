  padding: 0.6em 0.1em 0em 0.3em;
  height: 8em;
 border-bottom: 1px solid #F3F3F3;
   background: #fff; 
   overflow: hidden;


}
.ListDataItemWord{
  width: 100%;
  height: 90%;
