.ListDataContainer{
  display: flex;
  flex-direction: column;
  border-top: 1px solid #ddd;
  font-size: 1em;
  /* padding: 0.8em; */
  background: #f3f3f3;
}
.ListDataItem{
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
