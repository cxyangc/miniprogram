/* 正在进行的活动 */
.activity_ing_area{
    display: flex;
    flex-direction: column;

}
.activity_title{
    padding: 10px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    background: #f9f9f9;
}
.activity_title_text1{
    font-size: 18;
    color: #777777;
}
.activity_title_text2{
    margin-left: 5px;
    font-size: 18;
    color: #ff9c34;
}
.activity_list{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 10px;
}
.activity_list_item{
    display: flex;
    flex-direction: column;
    position: relative;
    margin-top: 10px;
    width: 90%;
    overflow: hidden;
}
.activity_list_item image{
    height: 120px;
    width: 100%;
}
.activity_list_item_card{
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 30px;
    z-index: 2;
    opacity: 0.8;
    background: #000;
    color: #fff;
    display: flex;
    flex-direction: row;
     justify-content: flex-end;
    align-items: center;

}
.activity_list_item_card view{
    font-size: small;
    padding: 0 10px;
}

.activity_list_item_card text{
    font-size: xx-small;
    padding: 0 10px;
}
/* 活动预告 */
.activity_will_area{
    display: flex;
    flex-direction: column;
}
.will_active{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 3;
    background: #888;
    opacity: 0.6;
}










