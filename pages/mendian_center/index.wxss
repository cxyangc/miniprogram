
.container{
  background: #fefefe;
  position:absolute;
}
/* 头部 */
.tongji_container{
  font-size: 0.8em;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 9em;
  padding:1em 0;
  color: #fff;
  position: relative;
  background-size: 100% 100%;
  background-image: url(http://image1.sansancloud.com/aikucun/2018_03/15/10/17/16_175.jpg?x-oss-process=style/preview_120);
}
.tongji_top{ 
  
}
.tongji_mid{
  margin-top: 0.2em;
  margin-bottom: 0.2em;
}
.tongjiContainer_form{
  margin-top:-3em;
  z-index:2;

}

.tongji_bottom{
  margin: 1em;
  padding: 1em;
  font-size: 0.8em;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  background: #fff;
  border-radius: 0.4em;
  box-shadow: 0 0 20px 2px rgba(245, 196, 75, 0.16)
}
.tongji_bottom_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 33.33%;
  padding:1em 0;
  position: relative;
  color: #818181;
}
.tongji_bottom_item > view{
  margin-bottom: 0.4em;
  font-size: 1.2em;
}
.borderRight2{
  position:absolute;
  right:0;
  top:20%;
  bottom:40%;
  border-right:1px solid #ede8dc;

}

/* 导航 */
.mendian_menu_container{
  margin: 1em;
  padding: 1em;
  font-size: 0.8em;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
  background: #fff;
  border-radius: 0.4em;
  box-shadow: 0 0 20px 2px rgba(245, 196, 75, 0.16)
}
.mendian_menu_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
  padding:1.4em 0;
  position: relative;
}
.borderRight{
  position: absolute;
  right: 0;
  top: 40%;
  bottom: 40%;
  border-right: 1px solid #ede8dc;
}
.mendian_menu_item > .imageContainer{
  width: 1.8em;
  height: 1.8em;
}
.imageContainer > image{
  width: 100%;
  height: 100%;
}
.mendian_menu_item > .item_text{
  color: #999;
  margin-top: 1em;
}