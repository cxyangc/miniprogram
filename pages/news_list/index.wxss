.noNews{
  padding: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top: 1px solid #ddd;
}
.ListDataContainer{
  display: flex;
  flex-direction: column;
  border-top: 1px solid #ddd;
}
.ListDataItem{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  height: 4em;
  border-bottom: 1px solid #ddd;
}
.ListDataItemWord{
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}
.ListDataItemWord text{
  margin-right:10px;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
}
.ListDataItemWord .word2 {
  color: #aaa;
  margin-left: 10px;
  font-size: small;
}
.ListDataItemImage{
  width: 30%;
  height: 100%;
  overflow: hidden;
}
.ListDataItemImage image{
  width: 100%;
  height: 100%;
}