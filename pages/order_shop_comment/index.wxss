/* 商品部分 */
.container{
  background: #ddd;
}

.commitProduct_container{
  display: flex;
  flex-direction: column;
}
.commitProduct_item{
  margin-bottom: 10px;
  padding: 10px;
  display: flex;
  flex-direction: column;
  background: #fff;
}

.commitProduct_item_info{
  display: flex;
  flex-direction: column;
}
.commitProduct_item_info_commit{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  height: 6em;
}
.commitProduct_item_info_icon{
  width: 20%;
}
.commitProduct_item_info_icon image{
  width: 100%;
  border: 1px solid #ccc;
  padding: 5px;
}
.commitProduct_item_info_commitcontent{
  width: 75%;
  height: 70%;
  font-size: small;
}
.commitProduct_item_info_commitcontent textarea{
  height: 100%;
  padding: 10px;
  border-radius: 5px;
  width:auto;
  margin-bottom: 10px;
}

/* 上传图片 */
.commitProduct_item_info_commit_images{
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}

.commitProduct_item_info_commit_images > image{
  border-radius: 3px;
  margin-right: 10px;
}
.crameContainer{
  border: 1px solid #ddd;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 10px;
}
.crame{
 
  width: 30px;
  height: 30px;
}

/* 店铺模块 */
.commitShop_container{
  display: flex;
  flex-direction: column;
  margin-bottom: 10px;
  background: #fff;
  padding-bottom: 10px;
}
.commitShop_container_name{
  padding: 10px;
}



/* 评分模块 */
.scollViews2{
  background: #fff;
  padding-top: 10px;
  margin-top: 5px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #ddd;
}

.scollViews2 .name{
  font-size: small;
  color: #333;
}
.scollViews2 .star_container{
  display: flex;
  flex-direction: row
}


.scollViews{
  background: #fff;
  padding: 10px 10px 0 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.scollViews .name{
  font-size: small;
  color: #333;
}
.scollViews .star_container{
  display: flex;
  flex-direction: row
}
.star_container .star{
  margin-left: 10px;
  width: 1.6em;
  height: 1.6em;
}
.star image{
  width: 100%;
  height:100%;
}



/* 按钮 */
.bottomButn_container{

}
.bottomButn_container_height{
  height: 3.2em;
}
.bottomButn{
  height: 3.2em;
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.bottomButn button{
  width: 90%;
  color: #fff;
  background: green;
}