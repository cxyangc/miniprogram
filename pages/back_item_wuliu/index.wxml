<view class='container'>
    <form class='backTextContainer' bindsubmit='getValues'>
      <view class='textAreaContainer'>
        <view >物流公司</view>
        <textarea class='textAreaContainer_textArea' maxlength='10' bindinput='getwuliuCom' value=''  name='wuliuCom'></textarea>
      </view>
      <view class='textAreaContainer'>
        <view >物流单号</view>
