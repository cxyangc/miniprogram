 /* pages/productDetail/index.wxss */

/* swiper */
.SwiperContainer{
  height: 18em;
  width: 100%;
  background: #fff; 
}
.SwiperIndex{
  width: 100%; 
  height: 100%;
}
.SwiperIndex image{
  height:100%;
  width: 100%;
}

/* 产品信息 */
.ProductDetailInfoContainer{
  padding: 10px 20px 0px 20px;
  display: flex;
  flex-direction: column;
}
.InfoName{
  font-weight: bold;
  padding-top: 10px;
}
.InfoSubName{
  font-size: x-small;
  color: #999;
  margin-top: 10px;
}
.InfoPrice{

  margin-top: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.p1{
  font-size: larger;
  color: #FF3D3D;
}
.p2{
  margin-left: 10px;
  font-size: small;
  color: #aaa;
  text-decoration: line-through;
}

.InfoYunfei{
  margin-top: 10px;
  font-size: x-small;
  color: #aaa;
}
/* //销售策略 */
.saleStrategy{
  margin-top: 10px;
  font-size: x-small;
  color: #777;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background: #f7f7f7;
  border-top: 1px solid #ddd;
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
}
.saleStrategyItems{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
}
.saleStrategyItems_name{
  width: 50%;
  height: 2em;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}
.saleStrategyItems_price{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 2em;
  width: 50%;
  border-bottom: 1px solid #ddd;
}
/* 标签 */
.InfoTags_container{
  padding: 15px 0px 10px 0px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 10px;
  color: #888;
}
.InfoTags{
  margin-left: 15px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.InfoTags image{
  width: 10px;
  height: 10px;
  margin-right: 3px;
}
.helpBlank{
  height: 5px;
  background: #f1f1f1;
}

/* tab */
.tab{
  display: flex;
  flex-direction: row;
  padding-top: 10px;
  padding-left: 20px;
  padding-right: 20px;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}
.tab view{
  margin-right: 10px;
  padding: 10px;
  font-size: small;
  color: #aaa;
}
.active{
  color: #000 !important;
  border-bottom: 1px solid #333;
}


/* tab点击后的container */

.tab_detail_container{
  width: 100%;
}
.attr_container{
  display: flex;
  flex-direction: column;
  padding: 20px;
}
.attr_item{
  margin-bottom: 20px;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: small;
}
.attr_item > text{
  color: #000;
  width: 25%;
}
.attr_item > view{
  margin-left: 10px;
  color: #888;
  width: 75%;
}
/* //评价 */
.pingjia_container{
  padding: 20px;
  display: flex;
  flex-direction: column;
}
.pingjia_item{
  border-bottom: 1px solid #ddd;
  display: flex;
  flex-direction: row;
  padding: 10px 0;
}
.UserIcon{
  width: 30px;
}

.CommitInfo{
  margin-left: 10px;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  font-size: small;
}
.CommitInfo .name{
  color: #333;
  font-weight: bold;
}
.CommitInfo .other{
  color: #333;
  margin-top: 8px;
}
.CommitInfo .other2{
  color: #ccc;
  margin-top: 8px;
  font-size: xx-small;
}




/* 底部加入购物车 */

.bottomHeight{
  height: 4em;
}

.product_detail_bottom_container{
  width: 100%;
  height: 3em;
  background: #fff;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.left_bottom{
  width: 15%;
  background: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  line-height: 16px;
}
.left_bottom_contact{
  width: 15%;
  background: white;
  height: 100%;
  margin-left:0;
  margin-right:0;
  padding-left:0;
  padding-right:0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing:content-box;
  border: 0px !important;
  border-radius: 0 !important;
  line-height: 16px;
}
button::after{
  box-sizing:content-box;
  border: 0px !important;
  border-radius: 0 !important;
}
.left_bottom_contact image{
  width: 1.2em;
  height: 1.2em;
}
.left_bottom_contact  text{
  font-size: xx-small;
  color: #777;
}
.left_bottom  text{
  font-size: xx-small;
  color: #777;
}
.left_bottom image{
  width: 1.2em;
  height: 1.2em;
}
.cartNumber{
  position: absolute;
  right: 3px;
  top: 2px;
  font-size: 9px;
  color: #fff;
  border-radius: 4px;
  background: #8B572A;
  padding: 1px 4px;
}
.right_bottom{
  width: 27.5%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: small;
  font-weight: bold;
}
.addto{
  background: #F39C12 ;
}
.bynow{
  background: #8B572A ;
}

/* 数量 */
.countContainer{
  position: fixed;
  bottom: 0;
  width: 100%;
  min-height: 12.6em;
  background: #fff;
  z-index: 12;
  display: flex;
  flex-direction: column;
}
.sureButn{
  width: 100%;
  height: 3em;
  color: #fff;
  background: deeppink;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ItemCountDell{
  padding: 10px;
  height: 3em;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #ccc;
}
/* 加和减 */
.item_infomation_nums{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

.item_infomation_nums image{
  height: 20px;
  width: 20px;
  padding: 5px;
  border: 1rpx solid #aaa;
}
.item_infomation_nums text{
  height: 20px;
  width:25px;
  padding: 5px;
  border-top: 1rpx solid #aaa;
  border-bottom: 1rpx solid #aaa;
  font-size: small;
}

.CountTopInfo{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding: 10px;
  height: 4em;
}
.CountTopInfo_image_container{
  position: absolute;
  top: -2.6em;
  left: 10px;
  height:7em;
  width: 7em;
  background: #000;
}
.CountTopInfo_image_container image{
  width: 100%;
  height: 100%;
}
.CountTopInfo_text_container{
  width: 60%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
}
.namenamename{
  font-size: small;
}
.price{
  color: red;
}
.font2{
  font-size: xx-small;
}



/* 规格 */

.measureItemContainer{
  display: flex;
  flex-direction: column;
}
.cardMid{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.cardMidName{
  color: #aaa;
  font-size: small;
  padding: 5px 10px;
}
.cardMidGuigeContainer{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  padding:0px 10px 10px 10px;
}
.cardMidGuigeContainer view{
  margin-right: 15px;
  padding: 5px 10px;
  border-radius: 8px;
  color: #000;
  border: 1px solid #ddd;
  margin-bottom: 10px;
}
.activeMeasure{
   border: 1px solid red !important;
}