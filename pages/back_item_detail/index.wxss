/* pages/back_item_detail/index.wxss */
.butnForTuiKuan{
  padding: 8px 8px;
  border-radius: 5px;
}


/* 购物车列表 */
.cartContainer{
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
}
.cartShopName{
  padding: 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: small;
}
.cartItems{
  display: flex;
  flex-direction: row;
  padding: 10px;
  overflow: hidden;
  position: relative;
  background-color: #fff;
}
.itemCheckbox{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
}
.itemCheckbox image{
  width: 5em;
  height: 5em;
}

.item_infomation{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin-left: 10px;
}
.item_infomation_name{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.item_infomation_money{
  font-size: small;
  display: flex;
  flex-direction: column;
  color: #888;
}
.item_infomation_money text{
  margin-top: 10px;
}

/* 返回的text */
.backTextContainer{
  display: flex;
  flex-direction: column;
  padding: 10px;
  font-size: small;
}
.backTextContainer textarea{
  margin-top: 5px;
  width: 100%;
  height: 5em;
  border: 1px solid #ddd; 
  border-radius: 5px;
}
.backTextContainer button{
  margin-top: 1em;
  width: 100%;
  color: #fff;
  background: green;
}