/* pages/login_signUp/index.wxss */

 .info_Form{
} 
.inputGroup{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.inputGroup image{
  width: 4em;
  height: 4em;
  min-height: 4em;
  max-height: 4em;
  margin: 1em 0;
  border-radius: 50%;
  border: 1rpx solid #ccc;
}
.inputGroup input{
  width: 90%;
  height: 2.6em;
  margin: 0.4em 0;
  border-radius: 0.2em;
  border: 1rpx solid #ccc;
  display:flex;
  justify-content:center;
  align-items:center;

}
.info_Form .CheckBox{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.CheckBox radio-group{
  height: 2.2em;
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.CheckBox radio{
  margin-right: 1em;
}


.info_Form button{
  width: 90%;
  margin-top: 1em;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.signIn{
  background:#fff;
  border:none;
  color:#fff;
  height: 2.4em;
  display: flex;
  justify-content: center;
  align-items: center;
}
.login_out{
  background:#fff;
  border:1px solid #8B572A;
  color:#fff;
}

.footer_botton{
  width: 100%;
  position: absolute;
  bottom: 0;
    background: #ffffff;
    border: 1px solid rgb(220,220,220);
    color: #8B572A;
    font-size: 0.8em;
}