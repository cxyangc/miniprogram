/* pages/login_signUp/index.wxss */

 .info_Form{
} 
.inputGroup{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.inputGroup image{
  width: 70px;
  height: 70px;
  min-height: 35px;
  max-height: 160px;
  margin: 5px 0;
  border-radius: 50%;
  border: 1rpx solid #ccc;
  font-size: small;
}
.inputGroup input{
  width: 90%;
  height: 35px;
  padding: 0 8px;
  margin: 5px 0;
  border-radius: 4px;
  border: 1rpx solid #ccc;
  font-size: small;
}
.info_Form .CheckBox{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.CheckBox radio-group{
  height: 40px;
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: small;
}
.CheckBox radio{
  margin-right: 10px;
}


.info_Form button{
  width: 90%;
  margin-top: 15px;
  font-size: small;
}
.signIn{
  background:#fff;
  border:none;
  color:#fff;
}
.login_out{
  background:#fff;
  border:1px solid #8B572A;
  color:#fff;
}

.footer_botton{
  width: 100%;
  position: absolute;
  bottom: 0;
    background: #ffffff;
    border: 1px solid rgb(220,220,220);
    color: #8B572A;
    font-size: small;
}