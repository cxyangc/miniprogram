 /* pages/cart/index.wxss */
.container{
    background: #f3f3f3;
    font-size: 0.8em;
    position:absolute;
    width:100%;

}
.pintuan_bg{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 4rpx;
  padding: 0 50rpx;
  height: 190rpx;
}
.pintuan_bg_left{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  line-height:40rpx;
}
.pintuan_bg_right_img{
  width:150rpx;
  height:120rpx;
}
.cart_star{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: nowrap;
  word-break: break-all;
  font-size: 28rpx;
}
.cart_star > view{
  margin-right: 10px;
  background: #7fdb8a;
  padding: 0 0.4em;
  border-radius: 0.4em;
  color: #fff;
  max-width:10em;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;

}
/* 地址模块 */ 

.addrItems{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
  background: #fff;
  border-radius: 0.2em;


}
.addrItems_info .userInfo{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #aaa
  
}
.addrItems > image{
  width: 1.2em;
  height: 1.2em;
  margin-right: 1.5em;
}
.addrItems > .addrItems_info{
  padding: 1em;
  display: flex;
  flex-direction: row;
  align-items: center;
}
/* .addrItems_info{
} */
.addrItems_info image{
  width: 1.4em;
  height: 1.4em;

}
/*04.11修改*/
.addrItems_info view{
  margin-left: 1em;
  flex-direction: column;
  flex:1;

}
.addrItems_info view text{
  display: block;
}
.addrItems_info view text:nth-last-child(1){
  display: block;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  overflow:hidden;
  word-break:break-all;
}
/*04.11修改  end*/
.addrName{
  padding-bottom: 0.4em;
}
.font2{
  font-size: 0.9em;
  width: 100%;
}
/*拼团  */
.pintuan_container{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  color: #888;
  background: #fff;
  border-radius: 0.2em;
  padding:1em 1em 0 1em;
  margin-bottom: 10rpx;
}
.pintuan_container .pintuan_tiltle{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  height: 60rpx;
  width:100%;
  font-size: 28rpx;
}
.pintuan_user_img{
  width: 35rpx;
  height: 35rpx;
  margin-right: 20rpx;
}
.pintuan_container .pintuan_users{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-left: 60rpx;
  box-sizing: border-box;
  height: 140rpx;
  width: 100%
}
.pintuan_user_list{
  display: flex;
  align-items: center;
}
.pintuan_user_item{
  border: 2rpx solid #e5e600;
  border-radius: 100rpx;
  width: 90rpx;
  height: 90rpx;
  margin-right: 15rpx;
  position: relative;
}
.user_head_img{
  width: 90rpx;
  height: 90rpx;
  border-radius: 90rpx;
}
.pintuan_user_list_tip{
  border: 4rpx solid #fff;
  width: 50rpx;
  height: 30rpx;
  border-radius: 30rpx;
  position: absolute;
  top:-4rpx;
  left:-6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
  line-height:30rpx;

}
.pintuan_invitation_button{
  border-radius: 10rpx;
  height:  50rpx;
  width: 110rpx;
  padding: 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #fff
}
.unpintuan_user_item{
  border: 2rpx dashed #999;
  border-radius: 90rpx;
  width: 90rpx;
  height: 90rpx;
  margin-right: 15rpx;
  display: flex;align-items: center;
  justify-content: center;
}
.unuser_head_img{
  width: 40rpx;
  height: 40rpx;
}
/* 购物车列表 */
.cartContainer{
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  color: #888;
  background: #fff;
  border-radius: 0.2em;
}
.cartShopName{
  padding: 0.5em 1em;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #dddddd;
  font-size: 28rpx;
}
.cartItems{
  display: flex;
  flex-direction: row;
  padding: 1em;
  overflow: hidden;
  border-bottom: 1px solid #dddddd;
  position: relative;
}
.itemCheckbox{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
}
.itemCheckbox image{
  width: 5em;
  height: 5em;
  border-radius: 0.2em;
}

.item_infomation{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 1em;
}
.item_infomation_name{
  width: 12em;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.item_infomation_name_measure{
  word-break: break-all; 
  width: 12em;
}
.item_infomation_money{
  color: #8B572A;
}
/* 加和减 */
.item_infomation_nums{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  position: absolute;
  right: 2em;
  top: 2.2em;
}

.item_infomation_nums text{
  padding: 0.4em;
  color: #aaa;
}

