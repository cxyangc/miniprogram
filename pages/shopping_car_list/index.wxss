/* pages/cart/index.wxss */
.container{ 
    background: #fff;
    font-size: 0.8em;
}
/* 购物车列表 */
.cartContainer{
  width: 100%;
  display: flex;
  flex-direction: column;
  color: #888;
  background: #fff;
  margin-bottom: 8em;
}
.cartShopName{
  padding: 15px 10px;
  text-align: left;
  border-bottom: 1px solid #dddddd; 
}

.cartItems{
  display: flex;
  flex-direction: row;
  padding: 10px;
  overflow: hidden;
  border-bottom: 1px solid #dddddd;
  /* height: 6em; */
  position: relative;
}
.itemCheckbox{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.itemCheckbox image{
  width: 6em;
  height: 6em;
  border: 1rpx solid #eee;
}

.item_infomation{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 10px;
}
.item_infomation_name{
  width: 10em;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  color: #000;
}
.cart_stock_warn{
  font-size: 0.8em;
  color: #aaa;
}
.cart_infoMeasure{
  width: 8em;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  color: #999;
  word-break: break-all;
}
.cart_infoMeasure view{
  margin-right: 10px;
}
.item_infomation_money{
  font-weight: bold;
  color: #000;
}
/* 加和减 */
.item_infomation_nums{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  position: absolute;
  right: 2em;
  bottom: 10px;
}

.item_infomation_nums image{
  height: 1.2em;
  width: 1.2em;
  padding: 5px;
  border: 1rpx solid #aaa;
}
.item_infomation_nums text{
  height: 1.2em;
  width: 1.2em;
  padding: 5px;
  border-top: 1rpx solid #aaa;
  border-bottom: 1rpx solid #aaa;
}

.xxx{
  position: absolute;
  top: 5px;
  right:10px;
  padding: 10px;
}
.xxx > image{
  width: 10px;
  height: 10px;
}
/* 删除 */

.butn_container{
  padding: 10px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1em #eee solid;
}
.butn_container view{
  width: 7em;
  height: 2.6em;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  color: aaa;
  border: 1rpx solid silver;
  font-size: 0.8em;
  margin-right: 10px;
}






/* 底部下单按钮 */
.cart_buttom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 3em;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background:#eeeeee;
}
.chooseAll{
  font-size: x-small;
  padding-left: 1em;
}
.chooseAll checkbox{
  background: #eee
}
.toJieSuan{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.toJieSuan_money{
  height: 3em;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-end;
  color: grey;
  font-size: 0.8em;
  padding-right: 5px;
}
.toJieSuan_butn{
    height: 3em;
    font-weight: bold;
    text-align: center;
    width: 6em;
    background: #8B572A;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
}
/* none */
.noCart{
  
  color: #555;
  background: #f2f2f2;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.noCart image{
  width: 25%;
}
.noCart text{
  margin-top: 20px;
}



/* 选择活动的卡片 */
.kefu_bg_zhezhao{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #000;
  opacity: 0.6;
  z-index: 12;
}

.kefu_wx_card{
  position: fixed;
  top: 15%;
  left: 15%;
  right: 15%;
  bottom: 15%;
  background: #fff;
  z-index: 13;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 0.8em;
  border-radius: 0.8em;
}
.kefu_wx_card > .icon{
  margin-top: 0.4em;
  width: 4em;
  height: 4em;
  border-radius: 50%;
  overflow: hidden;
}
.icon > image{
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 50%;

}
.kefu_wx_card > .name{
  margin-top: 0.8em;
  font-size: 1.2em;
  margin-bottom: 1em;
}

.code_container{
  display: flex;
  flex-direction: column;
  
}
.code_container > .code_item{
  margin-top: 0.8em;
  width: 10em;
  padding: 0.8em 0.8em;
  border: 1rpx solid #ddd;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 0.4em;
  word-break: break-all;
}
.code_image{
  width: 100%;
  height: 100%;
}
.kefu_wx_card > .tips{
  margin-top: 0.8em;
  color: red;
}

