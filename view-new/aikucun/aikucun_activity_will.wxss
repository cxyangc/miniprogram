
.activity_list_item_card_will{
   position: absolute;
    bottom: 0;
    right: 0;
    height: 2.6em;
    z-index: 2;
    opacity: 0.6;
    background: #000;
    color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-top-left-radius: 10px;
    padding: 0 10px;
}

/* 活动预告 */
.activity_will_area{
    display: flex;
    flex-direction: column;
}
.will_active{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 4;
    background: #888;
    opacity: 0.6;
}