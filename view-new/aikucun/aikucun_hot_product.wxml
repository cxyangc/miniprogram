<template name="aikucun_hot_product">
    <view class='hot_product_area2'>
        <view class='hot_product_list2' >
            <view class='hot_product_item2'  wx:for="{{indexData.products}}" wx:for-item="items" wx:key="{{index}}" >
              <!-- share -->
              <view class='share_view '> 
                <view  wx:if='{{!items.showShare}}' class='sharePoint' data-index='{{index}}' catchtap='showCardShare'>
                  <image src='http://image1.sansancloud.com/aikucun/2018_03/12/10/32/15_652.jpg'></image>
                </view>  
                <view class='share_box' wx:if='{{items.showShare}}'>
                  <button class='share_box_item' open-type='share' data-index='{{index}}' >
                    <image src='http://image1.sansancloud.com/aikucun/2018_03/12/10/15/08_248.jpg'></image>
                    <text>分享</text>
                  </button>
                  <button class='share_box_item' data-index='{{index}}' bindtap='showKefuWechatCode'>
                    <image src='http://image1.sansancloud.com/aikucun/2018_03/12/10/15/16_358.jpg'></image>
                    <text>客服</text>
                  </button>
                  <!-- <button class='share_box_item' data-index='{{index}}' bindtap='showKefuWechatCode'>
                    <image src='http://image1.sansancloud.com/aikucun/2018_03/12/10/15/16_358.jpg'></image>
                    <text>画图</text>
                  </button> -->
                </view>
              </view> 

                <view class='hot_product_item2_title font_b'>{{items.brandName}}</view>
                <view class='flex'><text class='hot_product_item2_derection font_08'>{{items.name}}</text></view>
                <swiper interval='200' style='height:{{((sysWidth - 70)/4)+20}}px;'>
                  <swiper-item  class='hot_product_item2_image_container' wx:for='{{items.imageListArr}}' wx:for-item='imageL' wx:for-index='i' wx:key='image_{{i}}' >
                      <block wx:for='{{imageL}}' wx:for-item='image' wx:for-index='j' wx:key='image_{{j}}'>
                        <view class='hot_product_item2_image_area' style='width:{{(sysWidth - 70)/4}}px;height:{{(sysWidth - 70)/4}}px;'>
                        <image src='{{image.imagePath}}' data-urls='{{items.imageListWatcher}}' data-me='{{image.imagePath}}' bindtap='watchBigImage'></image>
                        </view>
                      </block>
                    
                  </swiper-item>
                </swiper>
                <view class='hot_product_item2_bottom'>
                  <view class='hot_product_item2_priceInfoContainer'>
                    <view class='hot_product_item2_price font_red font_12'>￥{{items.price}}</view>
                    <view class='hot_product_item2_price_old font_08'>￥{{items.tagPrice}}</view>
                  </view>
                  <view class='hot_product_item2_bottom_butn font_08' data-index='{{index}}' bindtap='bindBuy'>立即抢购</view>
                </view>
               <!--  <view class='hot_product_item_text'>
                    <view>
                        <view >{{items.title}}</view>
                    </view>
                    <text class='font2'>{{items.subTitle2}}</text>
                </view> -->
            </view>
        </view>
        <view wx:if='{{listEnd}}' class='dixian'> 更多商品请关注今日活动 </view>
    </view>
</template>