/* 头部服务商 */
.headerContainer{
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f9f9f9;
  padding: 10px;
  position: relative;
}
.header_bg_banner{
  width: 100%;
  padding-top: 2.4em;
}
.header_bg_banner_2{
    width: 100%;
  padding-top: 0.4em;
}
.header_bg_banner image{
  width: 100%;
  height: 9em;
  border-radius: 5px;
}

.server_area{
  position: absolute;
  top: 1em;
  left: 15px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  z-index: 2;
}
.server_area .server_area_icon { 
    border-radius: 0.4em;
    width: 4em;
    height: 4em;
    overflow: hidden;
}
.server_area .server_area_icon image{
    width: 100%;
    height: 100%;
}
.server_area .server_area_text{
    
    height: 2em;
    margin-left: 10px;
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #000;
}