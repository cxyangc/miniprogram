/* aikucun_title */

.aikucun_title{
  padding: 0.8em;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center; 
  background: #fff;
  border-top-left-radius: 0.4em;
  border-top-right-radius: 0.4em;
}
.aikucun_title_container{
   display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center; 
}

.leftLine{
  width: 1em;
  height: 1px;
  border-bottom: 2px solid #e24e24;
  margin: 0 1em;
}
.leftImage{
  width: 1em;
  height: 1em;
  margin: 0 1em;
}
.leftImage > image{
  width: 100%;
  height: 100%;
}
.border_style_sanjiao{
    width:0; 
    height:0;
    border-top-width:6px;
    border-bottom-width: 6px;
    border-left-width: 3px;
    border-right-width: 3px;
    border-style:solid;
    margin-left: 10px;
    margin-right: 10px;
    margin-top: 5rpx;
}
.aikucun_title_text{
  color: #e24148;
  font-size: 1.1em;
}