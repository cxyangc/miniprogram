.userinfo_head3_content{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 3;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.userinfo_head3_name{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.loginOut_icon{
  display: flex;
  justify-content: center;
  align-items: center;
}
.userinfo_head3_content .loginOut_icon text{
  font-size: 24rpx;
  margin-top: 0;
  margin-bottom: 0;
  display: inline-block;
}
.userinfo_head3_content .loginOut_icon image{
  width: 33rpx;
  height: 33rpx;
  margin-right: 14rpx;
}
.userinfo_head3_content > image{
  height: 4rem;
  width: 4rem;
  border-radius: 50%;
  border: 1rpx solid #ccc;
}
.userinfo_head3_content text{
  margin: 20rpx 0;
  color: #fff;
  line-height: 32rpx;
}

