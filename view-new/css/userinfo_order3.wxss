
.userinfo_order3_container{
  padding: 0px 1em;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
}
.userinfo_order3_topView{
  border-bottom: 1px solid #ccc;
  display: flex;
  flex-direction: row;
  justify-content: space-between; 
  align-items: center;
  width: 100%;
  padding: 1.2em 0;
}
.userinfo_order3_topView view{
   color: #555;
   margin-left: 1em;
}
.userinfo_order3_topView text{
   color: #aaa;
   margin-right: 1em;
}
.userinfo_order3_list_container{
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items: center;
  width: 100%;
  flex-wrap: wrap;
  padding-bottom: 1em;
}
.userinfo_order3_list_item{
  margin-top: 1em;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.userinfo_order3_list_item image{
  width: 2em;
  height:2em;
}
.userinfo_order3_list_item_text{
  margin-top: 1em;
  color: #777;
}