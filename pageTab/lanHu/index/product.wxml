<!--正常的标题 -->
<template name="simpleProductList">



<block  wx:if="{{products.length!=0}}">
    <view class='detail_list_mode1' >
      <view class="mode1_items"   wx:for="{{products}}" wx:for-item="products" wx:key="{{index}}"  bindtap='tolinkUrl' data-id='{{products.id}}' > 
        <view class='mode1_itemsImg' >
        <image  mode='aspectFill'  src="{{products.imagePath}}"></image>
        <view class='show'> <image  mode='aspectFill'  src="../../../images/icon/share6x.png"></image></view>
       </view>
       <view class='jieShao'>
        <!-- 价格和购物车图片   -->
      <view class='NewBox'>
         <text>￥{{products.price}}</text> 
         <!-- <image src="../../../images/icons/shoppingCar.png"></image>  -->
        </view> 
       
      <view class='center' style='width:{{(1/jsonData.column)*sysWidth-40}}px;'>{{products.name}}</view> 

       <view class='smallText' style='width:{{(1/jsonData.column)*sysWidth-40}}px;'>
               <text>CHILI X 1</text> 
          <image src="../../../images/icon/Cart1@3x.png"></image>  
    </view> 
      
 </view>
      </view>
    </view>
</block>

<block wx:if="{{products.length==0}}">
            <view class="noproduct">
              <image mode="widthFix" src='/images/icons/no-product.png'></image>
              <text>没有相关商品</text>
            </view>
          </block>

</template>