


.detail_list_mode1{
  width: 702rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;

} 




.mode1_items{

  width: 340rpx;
  height: 480rpx;
  overflow: hidden;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
     padding-top: 10px;


}
.mode1_items .mode1_itemsImg{
  width: 340rpx;
  height: 340rpx;
  overflow: hidden;
  position: relative;
}
.mode1_itemsImg image{
  width: 100%;
  height: 100%;
}
.show{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: 16rpx;
  top:16rpx;
  overflow: hidden;
}
.show image{
  width: 100%;
  height: 100%;
}
.jieShao{
  display: flex;
  flex: 1;
  flex-direction: column;
}
.smallText{
   width: 300rpx;
   height: 38rpx;
   margin-left: 12rpx;
   margin-top: -15rpx;
   display: flex;
   flex-direction: row;
   justify-content: space-between;
}
.smallText text{
font-size: 20rpx;
display: block;
color:   #D2D2D2;
line-height: 38rpx;
}
.smallText image{
width: 30rpx;
height: 30rpx;
}


